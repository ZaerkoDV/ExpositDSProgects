<?xml version="1.0" encoding="UTF-8"?>
<beans:beans
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
	xmlns:mvc="http://www.springframework.org/schema/mvc"
	xmlns:context="http://www.springframework.org/schema/context" 
	xmlns:tx="http://www.springframework.org/schema/tx"
	xmlns:beans="http://www.springframework.org/schema/beans"

	xsi:schemaLocation="
		http://www.springframework.org/schema/mvc 
	    http://www.springframework.org/schema/mvc/spring-mvc.xsd
	    http://www.springframework.org/schema/context 
	    http://www.springframework.org/schema/context/spring-context-3.2.xsd
	    http://www.springframework.org/schema/tx
		http://www.springframework.org/schema/tx/spring-tx-4.0.xsd 
		http://www.springframework.org/schema/beans 
		http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">
		

	<!--Annotation-driven for registr DefaultAnnotationHandlerMapping and AnnotationMethodHandlerAdapter -->
	<mvc:annotation-driven />
 	<beans:bean class="org.springframework.web.servlet.mvc.annotation.DefaultAnnotationHandlerMapping" />
	<beans:bean class="org.springframework.web.servlet.mvc.annotation.AnnotationMethodHandlerAdapter" />
	
	<beans:bean class="org.springframework.web.servlet.view.InternalResourceViewResolver">
		<beans:property name="prefix" value="/views/"/>
		<beans:property name="suffix" value=".jsp" />
	</beans:bean>

	<beans:bean id="messageSource" class="org.springframework.context.support.ResourceBundleMessageSource">
		<beans:property name="basename" value="messages" />
		<beans:property name="defaultEncoding" value="UTF-8" />
	</beans:bean>

	<mvc:resources mapping="/resources/**" location="/resources/" />	
	
	<!--property connect to BD:name bd,port,username,password -->
	<beans:bean id="dataSource" class="org.apache.commons.dbcp.BasicDataSource"	destroy-method="close">
		<!--<beans:property name="defaultAutoCommit" value="true"/>-->
		<beans:property name="driverClassName" value="com.mysql.jdbc.Driver" />
		<beans:property name="url" value="jdbc:mysql://localhost:3306/service_station_management_system_db" />
		<beans:property name="username" value="root" />
		<beans:property name="password" value="" />
	</beans:bean>
	
	
	<!-- Hibernate 4 SessionFactory Bean definition -->
	<beans:bean id="hibernate4AnnotatedSessionFactory" class="org.springframework.orm.hibernate4.LocalSessionFactoryBean">
		<beans:property name="dataSource" ref="dataSource" />
		<beans:property name="annotatedClasses">
			<beans:list>
				<beans:value>com.expositds.servicestationmanagementsystem.model.ServiceStation</beans:value>
				<beans:value>com.expositds.servicestationmanagementsystem.model.ServiceStationCommentMark</beans:value>
				<beans:value>com.expositds.servicestationmanagementsystem.model.Stead</beans:value>
				<beans:value>com.expositds.servicestationmanagementsystem.model.Department</beans:value>
				<beans:value>com.expositds.servicestationmanagementsystem.model.DepartmentOrder</beans:value>
				<beans:value>com.expositds.servicestationmanagementsystem.model.Detail</beans:value>
				<beans:value>com.expositds.servicestationmanagementsystem.model.Employee</beans:value>
				<beans:value>com.expositds.servicestationmanagementsystem.model.Client</beans:value>
				<beans:value>com.expositds.servicestationmanagementsystem.model.ClientSecurityFeature</beans:value>
			</beans:list>
		</beans:property>
		
		<beans:property name="hibernateProperties">
			<beans:props>
				<beans:prop key="hibernate.dialect">org.hibernate.dialect.MySQLDialect</beans:prop>
				<beans:prop key="hibernate.show_sql">true</beans:prop>
				<beans:prop key="hibernate.format_sql">true</beans:prop>
				<beans:prop key="connection.pool_size">1</beans:prop>
				 <!--Cache get speed operation but more dengeres -->
				<beans:prop key="hibernate.cache.provider_class">org.hibernate.cache.NoCacheProvider</beans:prop>
				<!--create new bd when start aplication-->
				<!--<beans:prop  key="hibernate.hbm2ddl.auto">create</beans:prop>-->
			</beans:props>
		</beans:property>
	</beans:bean>
	
	<!--dao for ServiceStation-->
	<beans:bean id="serviceStationDAOImpi" class="com.expositds.servicestationmanagementsystem.dao.ServiceStationDAOImpi">
		<beans:property name="sessionFactory" ref="hibernate4AnnotatedSessionFactory" />
	</beans:bean>
	<!--service for ServiceStation-->
	<!--
	<beans:bean id="serviceStationServiceImpi" class="com.expositds.servicestationmanagementsystem.service.ServiceStationServiceImpi">
		<beans:property name="serviceStationDAOImpi" ref="serviceStationDAO"></beans:property>
	</beans:bean>
	 -->
	
	<!--dao for ServiceStationCommentMark-->
	<beans:bean id="serviceStationCommentMarkDAOImpi" class="com.expositds.servicestationmanagementsystem.dao.ServiceStationCommentMarkDAOImpi">
		<beans:property name="sessionFactory" ref="hibernate4AnnotatedSessionFactory" />
	</beans:bean>
	<!--service for ServiceStationCommentMark-->
	<!--
	<beans:bean id="serviceStationCommentMarkServiceImpi" class="com.expositds.servicestationmanagementsystem.service.ServiceStationCommentMarkServiceImpi">
		<beans:property name="serviceStationCommentMarkDAOImpi" ref="serviceStationCommentMarkDAOImpi"></beans:property>
	</beans:bean>
	-->
	
	<!--dao for Stead-->
	<beans:bean id="steadDAOImpi" class="com.expositds.servicestationmanagementsystem.dao.SteadDAOImpi">
		<beans:property name="sessionFactory" ref="hibernate4AnnotatedSessionFactory" />
	</beans:bean>
	<!--service for Stead-->
	<!--
	<beans:bean id="steadServiceImpi" class="com.expositds.servicestationmanagementsystem.service.SteadServiceImpi">
		<beans:property name="steadDAOImpi" ref="steadDAO"></beans:property>
	</beans:bean>
	-->
	
	<!--dao for Department-->
	<beans:bean id="departmentDAOImpi" class="com.expositds.servicestationmanagementsystem.dao.DepartmentDAOImpi">
		<beans:property name="sessionFactory" ref="hibernate4AnnotatedSessionFactory" />
	</beans:bean>
	<!--service for Department-->
	<!--
	<beans:bean id="departmentServiceImpi" class="com.expositds.servicestationmanagementsystem.service.DepartmentServiceImpi">
		<beans:property name="departmentDAOImpi" ref="departmentDAOImpi"></beans:property>
	</beans:bean>
	-->
	
	<!--dao for Department-->
	<beans:bean id="departmentOrderDAOImpi" class="com.expositds.servicestationmanagementsystem.dao.DepartmentOrderDAOImpi">
		<beans:property name="sessionFactory" ref="hibernate4AnnotatedSessionFactory" />
	</beans:bean>
	<!--service for Department-->
	<!--
	<beans:bean id="departmentOrderServiceImpi" class="com.expositds.servicestationmanagementsystem.service.DepartmentOrderServiceImpi">
		<beans:property name="departmentOrderDAOImpi" ref="departmentOrderDAOImpi"></beans:property>
	</beans:bean>
	-->
	
	<!--dao for Detail-->
	<beans:bean id="detailDAOImpi" class="com.expositds.servicestationmanagementsystem.dao.DetailDAOImpi">
		<beans:property name="sessionFactory" ref="hibernate4AnnotatedSessionFactory" />
	</beans:bean>
	<!--service for Detail-->
	<!--
	<beans:bean id="detailServiceImpi" class="com.expositds.servicestationmanagementsystem.service.DetailServiceImpi">
		<beans:property name="detailDAOImpi" ref="detailDAOImpi"></beans:property>
	</beans:bean>
	-->
	
	<!--dao for Employee-->
	<beans:bean id="employeeDAOImpi" class="com.expositds.servicestationmanagementsystem.dao.EmployeeDAOImpi">
		<beans:property name="sessionFactory" ref="hibernate4AnnotatedSessionFactory" />
	</beans:bean>
	<!--service for Employee-->
	<!--
	<beans:bean id="employeeServiceImpi" class="com.expositds.servicestationmanagementsystem.service.EmployeeServiceImpi">
		<beans:property name="employeeDAOImpi" ref="employeeDAOImpi"></beans:property>
	</beans:bean>
	-->
	
	<!--dao for Client-->
	<beans:bean id="clientDAOImpi" class="com.expositds.servicestationmanagementsystem.dao.ClientDAOImpi">
		<beans:property name="sessionFactory" ref="hibernate4AnnotatedSessionFactory" />
	</beans:bean>
	<!--service for Client-->
	<!--
	<beans:bean id="clientServiceImpi" class="com.expositds.servicestationmanagementsystem.service.ClientServiceImpi">
		<beans:property name="clientDAOImpi" ref="clientDAOImpi"></beans:property>
	</beans:bean>
	-->
	
	<!--dao for ClientSecurityFeature-->
	<beans:bean id="clientSecurityFeatureDAOImpi" class="com.expositds.servicestationmanagementsystem.dao.ClientSecurityFeatureDAOImpi">
		<beans:property name="sessionFactory" ref="hibernate4AnnotatedSessionFactory" />
	</beans:bean>
	<!--service for ClientSecurityFeature-->
	<!--
	<beans:bean id="clientSecurityFeatureServiceImpi" class="com.expositds.servicestationmanagementsystem.service.ClientSecurityFeatureServiceImpi">
		<beans:property name="clientSecurityFeatureDAOImpi" ref="clientSecurityFeatureDAOImpi"></beans:property>
	</beans:bean>
	-->
	
	<context:annotation-config/>
	
	<context:component-scan base-package="com.expositds.servicestationmanagementsystem">
		<context:include-filter type="regex" expression="com.expositds.servicestationmanagementsystem.dao.*"/>
		<context:include-filter type="regex" expression="com.expositds.servicestationmanagementsystem.*"/>
		<context:include-filter type="regex" expression="com.expositds.servicestationmanagementsystem.controller.*"/>
	</context:component-scan>
	
	<beans:bean id="transactionManager" class="org.springframework.orm.hibernate4.HibernateTransactionManager">
		<beans:property name="sessionFactory" ref="hibernate4AnnotatedSessionFactory" />
		<beans:property name="dataSource" ref="dataSource" />
	</beans:bean>

	<tx:annotation-driven transaction-manager="transactionManager"/>
	
</beans:beans>